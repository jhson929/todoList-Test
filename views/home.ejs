<%- include("./partials/header") %>

<div id="wrap">
  <header>TO DO LIST</header>

  <!--할 일 추가 field-->
  <div id="add_work">
      <form action="/add/todo" method="post">
          <input type="text" name="todo" id="input_task" placeholder="Add a new task" autofocus>
          <button type="submit" id="add_btn">+</button>
      </form>
  </div>

    <div id="date">
      <p></p>
    </div>

      <ul>
        <% todo.forEach(todos => { %>
          <li class="list">
            <input class="checkbox" type="checkbox">
            <p><%= todos.todo %></p>
            <Button onClick="location.href='/delete/todo/<%= todos._id %>'">X</Button>
          </li>
        <% }) %>
      </ul> 

      <script src="todoscript.js"></script>
</div>

<%- include("./partials/footer") %> 